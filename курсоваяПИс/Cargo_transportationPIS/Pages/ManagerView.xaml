<Page x:Class="Cargo_transportationPIS.Pages.ManagerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cargo_transportationPIS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
            Title="МЕНЕДЖЕР">
    <Grid >
       
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Заявки" >
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ПОИСК" FontWeight="Bold" Margin="4" FontSize="10"/>
                        <TextBox x:Name="nameKompapy" Margin="4" Width="200"/>
                        <Button x:Name="filtr" Margin="5" Width="100" Content="СБРОСИТЬ" FontWeight="Bold" 
                                Foreground="White"  FontSize="10" ToolTip="Сбросить настройки фильтрации" Background="Orange"/>
                    </StackPanel>



                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible" Grid.Column="1"  >
                                <StackPanel Background="White" >
                                    <StackPanel Grid.Column="0" >

                                        <StackPanel Orientation="Horizontal" Margin="3" HorizontalAlignment="Center" >
                                            <TextBlock Text="Количество заявок: " FontSize="13"/>
                                            <TextBlock x:Name="tt1" FontSize="13"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <ListView x:Name="listview" Background="Transparent" >
                                                <ListView.ItemTemplate >
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel >
                                                                <StackPanel Orientation="Horizontal" >
                                                                    <TextBlock Text="Номер заявки" Width="90" FontWeight="Bold"  FontSize="13" Margin="5" />
                                                                    <TextBlock Text="Клиент" Width="160" FontWeight="Bold"  FontSize="13" Margin="5" />
                                                                    <TextBlock Text="Дата" Width="90"  FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Адрес отправления" Width="170" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Адрес прибытия" Width="140" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Название груза" Width="140" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Вес" Width="140" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Количество" Width="140" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Статус" Width="100" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                    <TextBlock Text="Комментарий" Width="120" FontWeight="Bold" FontSize="13" Margin="5"/>
                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">

                                                                    <TextBlock Text="{Binding ID_заявки}"  TextWrapping="Wrap"  Width="90" Foreground="Blue" FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Пользователи.Фамилия}"  TextWrapping="Wrap"   Width="160" FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Дата}" Width="90" Margin="5" FontSize="13"  Foreground="Blue" />
                                                                    <TextBlock Text="{Binding Адрес_отправления}" TextWrapping="Wrap"  Width="170"  FontSize="13"  />
                                                                    <TextBlock Text="{Binding Адрес_прибытия}" TextWrapping="Wrap"  Width="170"  FontSize="13"  />


                                                                    <TextBlock Text="{Binding Название_груза}"  Width="140" FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Вес}"  Width="100" FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Количество}" Width="120"  FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Статус.Наименование_статуса}" Width="120"  FontSize="13" Margin="5" />
                                                                    <TextBlock Text="{Binding Комментарий}" Width="120"  FontSize="13" Margin="5" />
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="0" Grid.Column="2" >
                                                        <Button x:Name="stagesDevelopment" Click="stagesDevelopment_Click" 
                                                                ToolTip="Создать перевозку" HorizontalAlignment="Center" BorderBrush="Transparent" Background="Transparent" Margin="5">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="/Images/transport.png" Width="20"/>
                                                                <TextBlock Text="Создать перевозку" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <Button x:Name="redd" HorizontalAlignment="Center" ToolTip="Отклонить" 
        BorderBrush="Blue" VerticalAlignment="Center" Background="Transparent" 
        Margin="5" Click="redd_Click">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="/Images/cancel.png" Width="20"/>
                                                                <TextBlock Text="Отклонить" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                        </Button>

                                                    </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            <TextBlock x:Name="itog"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                   
            </TabItem>
            <TabItem Header="Водители" >
            </TabItem> 
            <TabItem Header="Перевозки" >
            </TabItem>
            <TabItem Header="Статистика" >
            </TabItem>
        </TabControl>
       
           
    </Grid>
</Page>
